<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/user_background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.boyhotkey96.funnystories.UserManager.Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/canhLe20"
        android:layout_marginRight="@dimen/canhLe20"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/widthLogo"
            android:layout_height="@dimen/heightLogo"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:src="@drawable/user_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="@string/title"
            android:textColor="#ff0000"
            android:textSize="@dimen/textSize15"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etUserOrMail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/canhLe20"
            android:background="@drawable/user_shape_edittextuser"
            android:drawableLeft="@drawable/user_user"
            android:drawablePadding="@dimen/canhLe10"
            android:hint="Username or Email"
            android:inputType="textEmailAddress"
            android:padding="@dimen/canhLe10" />

        <EditText
            android:id="@+id/etPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/canhLe10"
            android:background="@drawable/user_shape_edittextuser"
            android:drawableLeft="@drawable/user_password"
            android:drawablePadding="@dimen/canhLe10"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:padding="@dimen/canhLe10" />

        <Button
            android:id="@+id/btLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/canhLe20"
            android:background="@drawable/user_shape_buttonlogin"
            android:text="@string/login"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="@dimen/textSize20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/canhLe2"
            android:text="hoặc"
            android:textStyle="bold" />

        <!--<Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3a5a97"
            android:drawableRight="@drawable/user_facebook"
            android:paddingLeft="25dp"
            android:text="Login with"
            android:textAllCaps="false"
            android:textColor="#fff" />-->

        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />

        <!--<com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"/>-->

        <TextView
            android:id="@+id/tvSignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/canhLe20"
            android:text="Không phải là thành viên? Đăng ký ngay"
            android:textColor="#0ebe6d"
            android:textSize="@dimen/textSize15"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvForgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:padding="8dp"
        android:text="Quên mật khẩu?"
        android:textColor="#fff" />

</LinearLayout>
