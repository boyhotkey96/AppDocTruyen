<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/user_background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.boyhotkey96.funnystories.UserManager.Signup">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/canhLe20"
        android:paddingRight="@dimen/canhLe20">

        <ImageView
            android:layout_width="@dimen/widthLogo"
            android:layout_height="@dimen/heightLogo"
            android:layout_gravity="center"
            android:src="@drawable/user_logo" />

        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/canhLe20"
            android:background="@drawable/user_shape_edittextuser"
            android:drawableLeft="@drawable/user_user"
            android:drawablePadding="@dimen/canhLe10"
            android:hint="User Name"
            android:inputType="textPersonName"
            android:padding="@dimen/canhLe10" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/canhLe10"
            android:background="@drawable/user_shape_edittextuser"
            android:drawableLeft="@drawable/user_user"
            android:drawablePadding="@dimen/canhLe10"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:padding="@dimen/canhLe10" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/canhLe10"
            android:background="@drawable/user_shape_edittextuser"
            android:drawableLeft="@drawable/user_password"
            android:drawablePadding="@dimen/canhLe10"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:padding="@dimen/canhLe10" />

        <EditText
            android:id="@+id/etPassword2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/canhLe10"
            android:background="@drawable/user_shape_edittextuser"
            android:drawableLeft="@drawable/user_password"
            android:drawablePadding="@dimen/canhLe10"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:padding="@dimen/canhLe10" />

        <Button
            android:id="@+id/btRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/canhLe20"
            android:background="@drawable/user_shape_buttonlogin"
            android:text="Register"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="@dimen/textSize20" />

        <TextView
            android:id="@+id/tvLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/canhLe10"
            android:text="Đã có tài khoản? Đăng nhập ngay"
            android:textColor="#0ebe6d"
            android:textSize="@dimen/textSize15"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
